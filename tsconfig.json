{
  "compilerOptions": {
    // Src
    "moduleResolution": "node",
    "module": "commonjs",

    "esModuleInterop": true,
    "noImplicitAny": true,
    "strictNullChecks": true,

    // Output
    "target": "es6",
    "outDir": "dist",
    "sourceMap": true,

    "typeRoots": ["./node_modules/@types", "./typings"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "typings"]
}
