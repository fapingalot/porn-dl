{
  "compilerOptions": {
    // Src
    "baseUrl": "./",
    "moduleResolution": "classic",
    "module": "commonjs",

    "esModuleInterop": true,
    "noImplicitAny": true,
    "strictNullChecks": true,

    // Output
    "target": "es5",
    "outDir": "build",
    "sourceMap": true,

    "paths": {
      "@app/*": ["src/*"]
    },

    "lib": ["dom", "esnext"]
  },
  "include": ["src/**/*"],
  "files": ["types.d.ts"]
}
